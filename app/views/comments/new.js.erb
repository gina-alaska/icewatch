$('<%= escape_javascript(render "form") %>').on('show.bs.modal', function() {
  var page = $("#page >li.active").text();

  if($("#comment_text").text().length == 0) {
    $(this).find('#comment_text').val("(" + page + ")")
  }
  $(this).find('.person-field').selectize({
    plugins: ['restore_on_backspace', 'remove_button'],
    create: function(input) {
      return {value: input, text: input}
    }
  });

}).on('hidden.bs.modal', function() {
  $(this).remove();
}).modal('show')
