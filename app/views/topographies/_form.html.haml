= form_for(@topography) do |f|
  - if @topography.errors.any?
    #error_explanation
      %h2
        = pluralize(@topography.errors.count, "error")
        prohibited this topography from being saved:
      %ul
        - @topography.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :ice_observation_id
    %br/
    = f.number_field :ice_observation_id
  .field
    = f.label :old
    %br/
    = f.check_box :old
  .field
    = f.label :snow_covered
    %br/
    = f.check_box :snow_covered
  .field
    = f.label :concentration
    %br/
    = f.number_field :concentration
  .field
    = f.label :ridge_height
    %br/
    = f.number_field :ridge_height
  .field
    = f.label :topography_lookup_id
    %br/
    = f.number_field :topography_lookup_id
  .actions
    = f.submit
