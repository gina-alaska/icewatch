%h1
  = @cruise.ship
  %small
    = "#{ymd(@cruise.starts_at)} to #{ymd(@cruise.ends_at)}"
.row
  .col-md-2
    %ul.list-group
      %li.list-group-item.active
        %strong Download Data
      %li.list-group-item
        =link_to "CSV", "#"
      %li.list-group-item
        = link_to "JSON", "#"
      %li.list-group-item
        = link_to "Sigrid3(Beta)", "#"
    %ul.nav.nav-pills.nav-stacked
      %li.active= link_to "Map", "#"
      %li= link_to "Graphs", "#"
      %li= link_to "Photos", "#"
      %li= link_to "Observations", "#"
  .col-md-10
    .panel.panel-default
      #map.map{data: {cruise_info: cruise_path(@cruise, 'geojson')}}
      .panel-body
        %h4 Observed Sea Ice Type
        .legend
          %span.label.new-ice New Ice
          %span.label.first-year-ice First Year Ice
          %span.label.old-ice Old Ice
          %span.label.other-ice Other
