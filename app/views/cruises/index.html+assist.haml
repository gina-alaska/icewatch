.jumbotron
  %h3 Welcome to the
  %h2 Arctic Shipborne Sea Ice Standardization Tool
  = link_to "Start Observation", cruise_observations_path(@active_cruise), class: 'btn btn-primary btn-lg', method: 'POST'

.col-md-2.col-sm-2
  %ul.list-group
    %li.list-group-item.active
      Export
    %li.list-group-item
      = link_to "All Observations", "#"
    %li.list-group-item
      = link_to "Selected Observations", "#"

  %ul.list-group
    %li.list-group-item.active
      Import

    %li.list-group-item.cruise-upload{data: {provides: 'fileinput'}}
      = link_to "From CSV", '#', data: {trigger: 'fileinput'}
      -# .fileinput-new From CSV
      = file_field_tag 'observations', data: {'submit-url' => import_cruise_observations_path(@active_cruise)},
        class: 'hidden'

  %ul.list-group
    %li.list-group-item.active
      Cruise
    %li.list-group-item
      = link_to "Edit", edit_cruise_path(@active_cruise)
    %li.list-group-item
      = link_to "CSV", cruise_path(@active_cruise, :csv)

  -# %ul.list-group
  -#   %li.list-group-item.active
  -#     Change Cruise
  -#   = render @cruises
  -#
  -# %br
  -# = link_to 'New Cruise',
.col-md-10.col-sm-10
  .panel.panel-primary
    .panel-heading
      %h4
        = "#{@active_cruise.ship}: #{@active_cruise.starts_at} - #{@active_cruise.ends_at}"
    %table.table
      %thead
        %tr
          %th All/None
          %th Observation Date
          %th Last Modified
          %th Total Ice Concentration
          %th Primary Observer
          %th Additional Observers
          %th
      %tbody
        = render partial: 'observation', collection: @active_cruise.observations
