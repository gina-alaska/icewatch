!!!
%html
  %head
    %title Icewatch
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .navbar.navbar-default
      .container-fluid
        .navbar-header
          = link_to "Ice Watch", root_url, class: 'navbar-brand'
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "About", "/about/pages"
          -# - if current_user.admin?
          -#   = link_to "Admin", "#"
          %li= login_helper
    %ol.breadcrumb
      = yield :breadcrumb
    = yield
