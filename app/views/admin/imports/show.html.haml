.container-fluid
  .row-fluid
    .span9
      .page-heading
        %h1=@observation.try(:obs_datetime) || "No Date Specifed"
    .span2
      =link_to "Edit", edit_admin_import_path(@import), class: 'btn btn-primary'
      =link_to "Delete", admin_import_url(@import), method: :delete, class: 'btn btn-danger', confirm: 'Permanently destroy this observation. Are you sure?'
  .row-fluid
    .span12
  - if @observation.errors.messages.has_key? :hexcode
    %h2
      This appears to be a duplicate record
  - else 
    - @observation.errors.messages.each do |error|
      %dl.dl-horizontal
        %dt=error.first
        - error.last.each do |e|
          %dd=e
  #editor.span12
    = JSON.pretty_generate(@observation.as_json)
     
          
:javascript
  var editor = ace.edit("editor");
  editor.setTheme("ace/theme/github");
  editor.setReadOnly(true);
  editor.getSession().setMode("ace/mode/json");
  editor.resize();