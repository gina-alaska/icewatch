.container-fluid
  .well
    =simple_form_for @cruise, multipart: true, html: {class: 'form-inline'}, url: admin_cruises_url, defaults: {label: false} do |f|
      %fieldset
        %legend= "Cruise Information >"
        =f.input :ship, placeholder: "Ship Name", required: true
        =f.input :start_date, placeholder: "Cruise Start", class: 'datefield', 'data-date-format' => 'yyyy.mm.dd'
        =f.input :end_date, placeholder: "Cruise End", class: 'datefield', 'data-date-format' => 'yyyy.mm.dd'
      %fieldset
        %legend= "Additional Information >"
        =f.input :captain, placeholder: "Captain's Name"
      %fieldset
        %legend= "Observations >"
        .btn.btn-success.fileinput-button
          %i.icon-plus.icon-white
          Attach Observations
          = f.input_field :observations, as: :file
        
      .row-fluid
        .span12
          =f.submit "Add Cruise", class: 'btn btn-primary pull-right'