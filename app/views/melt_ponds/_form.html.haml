= form_for(@melt_pond) do |f|
  - if @melt_pond.errors.any?
    #error_explanation
      %h2
        = pluralize(@melt_pond.errors.count, "error")
        prohibited this melt_pond from being saved:
      %ul
        - @melt_pond.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :ice_observation_id
    %br/
    = f.number_field :ice_observation_id
  .field
    = f.label :max_depth_lookup_id
    %br/
    = f.number_field :max_depth_lookup_id
  .field
    = f.label :surface_lookup_id
    %br/
    = f.number_field :surface_lookup_id
  .field
    = f.label :pattern_lookup_id
    %br/
    = f.number_field :pattern_lookup_id
  .field
    = f.label :bottom_type_lookup_id
    %br/
    = f.number_field :bottom_type_lookup_id
  .field
    = f.label :surface_coverage
    %br/
    = f.number_field :surface_coverage
  .field
    = f.label :freeboard
    %br/
    = f.number_field :freeboard
  .field
    = f.label :dried_ice
    %br/
    = f.check_box :dried_ice
  .field
    = f.label :rotten_ice
    %br/
    = f.check_box :rotten_ice
  .actions
    = f.submit
